<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Form Text Field"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.form.text.v2.editor.custom]"
    helpPath="https://www.adobe.com/go/aem_cmp_form_text_v2"
    trackingFeature="core-components:form-text:v2">
    <content
        granite:class="cmp-form-text__editDialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <fieldType
                                                granite:class="cmp-form-text__types"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Field Type"
                                                name="./type">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <text
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Text"
                                                        value="text"/>
                                                    <textarea
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Textarea"
                                                        value="textarea"/>
                                                    <email
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Email"
                                                        value="email"/>
                                                    <tel
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Phone"
                                                        value="tel"/>
                                                    <date
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:hideResource="{Boolean}true"
                                                        text="Date"
                                                        value="date"/>
                                                    <time
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:hideResource="{Boolean}true"
                                                        text="Time"
                                                        value="time"/>
                                                    <number
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:hideResource="{Boolean}true"
                                                        text="Number"
                                                        value="number"/>
                                                    <password
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:hideResource="{Boolean}true"
                                                        text="Password"
                                                        value="password"/>
                                                </items>
                                            </fieldType>
                                            <regex
                                                granite:class="cmp-text-name-selection cmp-form-text__regex-list"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Pattern format for the input."
                                                fieldLabel="Validation Regex"
                                                name="./validationRegex">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/bin/kpmg/regexmapping"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".text-name-dialog"/>
                                            </regex>
                                            <rows
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldLabel="Text Lines"
                                                min="{Long}1"
                                                name="./rows"
                                                value="2"
                                                wrapperClass="cmp-form-text__rows"/>
                                            <label
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Label of this field"
                                                fieldLabel="Label"
                                                name="./jcr:title"
                                                required="{Boolean}true"/>
                                            <hideLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Needed if the label is required only for accessibility purpose and does not impart any additional visual information about the field"
                                                name="./hideTitle"
                                                text="Hide the label from being displayed"
                                                value="true"/>
                                            <name
                                                granite:class="cmp-text-name-selection"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="The name of the field, which is submitted with the form data."
                                                fieldLabel="Name"
                                                name="./name"
                                                required="{Boolean}true">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/bin/kpmg/newmapping"/>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".text-name-dialog"/>
                                            </name>
                                            <value
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Default value of the field"
                                                fieldLabel="Value"
                                                name="./value"/>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML ID attribute to apply to the component."
                                                fieldLabel="ID"
                                                name="./id"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <about
                        jcr:primaryType="nt:unstructured"
                        jcr:title="About"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <helpMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="A hint to the user of what can be entered in the field"
                                                fieldLabel="Help Message"
                                                name="./helpMessage"/>
                                            <usePlaceholder
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Whether to display the help message inside the form input when it is empty and not focused"
                                                name="./usePlaceholder"
                                                text="Display help message as placeholder"
                                                value="true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </about>
                    <constraints
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Constraints"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <constraintMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldDescription="Message displayed as tooltip when submitting the form if the value does not validate the Type chosen"
                                                fieldLabel="Constraint Message"
                                                name="./constraintMessage"
                                                wrapperClass="cmp-form-text__constraintmessage"
                                                granite:class="cmp-form-text__constraintmessage_field"/>
                                                
                                            <required
                                                granite:class="cmp-form-text__required"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Whether the user must fill in a value before submitting the form"
                                                name="./required"
                                                text="Required"
                                                value="true"/>
                                            <readonlySelectedAlert
                                                granite:class="cmp-form-text__readonlyselected-alert"
                                                granite:hidden="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/alert"
                                                size="S"
                                                text="Enabling the required option disables the readonly option"
                                                variant="warning"/>
                                            <requiredMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldDescription="Message displayed as tooltip when submitting the form if the value is left empty"
                                                fieldLabel="Required Message"
                                                name="./requiredMessage"
                                                wrapperClass="cmp-form-text__requiredmessage"
                                                granite:class="cmp-form-text__requiredmessage_field"/>
                                            <readonly
                                                granite:class="cmp-form-text__readonly"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Whether the user cannot modify the value of the field"
                                                name="./readOnly"
                                                text="Make read only"
                                                value="true"/>
                                            <requiredSelectedAlert
                                                granite:class="cmp-form-text__requiredselected-alert"
                                                granite:hidden="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/alert"
                                                size="S"
                                                text="Enabling the readonly option disables the required option"
                                                variant="warning"/>
                                            <maxlength
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Message displayed as tooltip  set character limits for the text field "
                                                fieldLabel="Character Limit"
                                                name="./maxlength"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </constraints>
                    <regex
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Regular Expression"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <regexValidation
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Click this checkbox to enable the custom regex implementation"
                                                name="./isCustomRegex"
                                                value="{Boolean}true"
                                                uncheckedValue="{Boolean}false"
                                                text="Enable Custom Validation"
                                                granite:class="cmp-form-text__is-custom-regex"
                                                />
                                            <helpMessageRegex
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/text"
                                                    fieldDescription="Click this checkbox to enable the custom regex implementation"
                                                    name="./helpregex"
                                                    text="Please make sure the provided Regular Express is pre-validated and tested !"
                                                    granite:class="coral-Form-fieldlabel cmp-form-text__custom-regex-hlp-mgs"/>
                                                    
                                            <customregex
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Provide your own regular express pattern"
                                                fieldLabel="Custom Regular Expression"
                                                name="./customRegex"
                                                wrapperClass="cmp-form-text__custom-regex-value"
                                                granite:class="cmp-form-text__custom-regex-value-cmp"/>
                                            <regexValidationMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldDescription="Enter a message to be displayed when the above pattern validation fails"
                                                fieldLabel="Custom Regular Expression Validation Message"
                                                name="./regexMessage"
                                                wrapperClass="cmp-form-text__custom-regex-msg"
                                                granite:class="cmp-form-text__custom-regex-msg-cmp"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </regex>
                    <cq:styles
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_edit/styletab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
