<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Quote"
    extraClientlibs="[core.wcm.components.image.v3.editor,core.wcm.components.teaser.v2.editor,cq.author.maxvalidator,cq.author.pathfield]">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <actions 
                        jcr:primaryType="nt:unstructured" 
                        sling:hideResource="{Boolean}true" 
                        why="Hide links because there are no CTAs in design">
                    </actions>
                    <text jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                             <alertMessage
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Message"
                                                sling:orderBefore="id"
                                                sling:resourceType="granite/ui/components/coral/foundation/alert"
                                                text="If you chose to author the Quote component within the column control please use within 100% layout only."
                                                variant="info"/>
                                            <pretitle
                                                jcr:primaryType="nt:unstructured"
                                                fieldDescription="Mandatory text above the quote."
                                                fieldLabel="Eyebrow"
                                                name="./pretitle"/>
                                            <titleGroup jcr:primaryType="nt:unstructured">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <customTitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:hideResource="{Boolean}true"/>
                                                    <title
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:hideResource="{Boolean}true"/>
                                                    <titleFromLinkedPage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:hideResource="{Boolean}true"/>
                                                </items>
                                            </titleGroup>
                                            <descriptionGroup jcr:primaryType="nt:unstructured">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <description
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:hideResource="{Boolean}true"
                                                    />
                                                    <descriptionFromLinkedPage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:hideResource="{Boolean}true"/>
                                                    <customDescription
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                        fieldDescription="Text to display for the quote."
                                                        fieldLabel="Quote to display"
                                                        name="./customDescription"
                                                        required="{Boolean}true" >
                                                    </customDescription>
                                                    <quoteAuthor
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Add required text for author"
                                                        fieldLabel="Add an author"
                                                        name="./authorLabel"
                                                        required="{Boolean}true"
                                                    />
                                                    <quoteDetail1
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Add optional author details"
                                                        fieldLabel="Add author details"
                                                        name="./authorDetail1"
                                                    />
                                                     <quoteDetail2
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Add optional author details"
                                                        fieldLabel="Add additonal author details"
                                                        name="./authorDetail2"
                                                    />
                                                </items>
                                            </descriptionGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </text>
                    <image
                        jcr:primaryType="nt:unstructured"
                        sling:orderBefore="actions"/>
                    <indexable
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="kpmg/components/utilities/tab_indexable/indexable"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
