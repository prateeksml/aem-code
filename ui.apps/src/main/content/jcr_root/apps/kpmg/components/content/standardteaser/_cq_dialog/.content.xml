<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Standard Teaser"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-teaser__editor cmp-image__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <actions jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <alertMessage
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Message"
                                                sling:orderBefore="linksNote"
                                                sling:resourceType="granite/ui/components/coral/foundation/alert"
                                                text="If you chose to author the Standard Teaser component within the column control please use within 100% layout only."
                                                variant="info"/>
                                            <link
                                                jcr:primaryType="nt:unstructured"
                                                sling:hideResource="{Boolean}true"/>
                                            <actions
                                                jcr:primaryType="nt:unstructured"
                                                required="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </actions>
                    <text jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <pretitle
                                                jcr:primaryType="nt:unstructured"
                                                fieldDescription="A subtitle that will be displayed below the Teaser's title."
                                                fieldLabel="Subtitle"
                                                name="./pretitle"/>
                                            <titleGroup jcr:primaryType="nt:unstructured">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <title
                                                        jcr:primaryType="nt:unstructured"
                                                        required="{Boolean}true"/>
                                                </items>
                                            </titleGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </text>
                    <image
                        jcr:primaryType="nt:unstructured"
                        sling:orderBefore="actions"/>
                    <indexable
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="kpmg/components/utilities/tab_indexable/indexable"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
