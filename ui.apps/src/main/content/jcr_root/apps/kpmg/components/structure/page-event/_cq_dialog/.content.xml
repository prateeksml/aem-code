<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.kpmg.components.page-article,core.kpmg.components.basepage,kpmg-components.eventdetailpage]">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <moretitles
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="More Titles and Description"
                                        path="/mnt/override/apps/kpmg/components/utilities/basic_description"/>
                                    <onofftime
                                        cq:showOnCreate="{Boolean}false"
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="On/Off Time"
                                        path="/mnt/override/apps/kpmg/components/utilities/basic_onofftime"/>
                                </items>
                            </column>
                        </items>
                    </basic>
                    <eventdetails
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Event Details"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <eventtype
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Event Type"
                                        name="./eventType"
                                        required="{Boolean}true">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-msm-lockable="eventType"/>
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="kpmg/ca-config/datasource"
                                            config="event-type"/>
                                    </eventtype>
                                    <timezone
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Time Zone"
                                        name="./timeZone">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="kpmg/datasource/timezone"/>
                                    </timezone>
                                    <eventstartdate
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        displayedFormat="MMMM DD, YYYY hh:mm a"
                                        displayTimezoneMessage="{Boolean}true"
                                        fieldLabel="Event Start Time"
                                        minDate="today"
                                        name="./eventStartTimeAndDate"
                                        required="{Boolean}true"
                                        type="datetime"/>
                                    <eventendtdate
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        displayedFormat="MMMM DD, YYYY hh:mm a"
                                        displayTimezoneMessage="{Boolean}true"
                                        fieldLabel="Event End Time"
                                        minDate="today"
                                        name="./eventEndTimeAndDate"
                                        required="{Boolean}true"
                                        validation="coral-date-validation"
                                        type="datetime"/>
                                    <evenlocation
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter event location."
                                        fieldLabel="Event Location"
                                        cq:showOnCreate="{Boolean}true"
                                        name="./eventLocation"/>
                                </items>
                            </column>
                        </items>
                    </eventdetails>
                </items>
            </tabs>
            <extraClientlibs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                js="kpmg-components.eventdetailpage"/>
        </items>
    </content>
</jcr:root>
